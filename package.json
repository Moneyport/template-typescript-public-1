{
  "name": "@mojaloop/repo-name",
  "version": "0.1.0",
  "description": "Typescript Mojaloop project template",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run test:unit | faucet",
    "pretest": "npm run build",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "ts-node node_modules/tape/bin/tape 'test/unit/**/*.test.ts'",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc --reporter=lcov --require ts-node/register tape test/unit/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "git:stagelib": "git add lib/*ts; git add lib/*.map; git add lib/*.js",
    "git:lintFix": "npm run lint -- --fix"
  },
  "pre-commit": [
    "build",
    "git:lintFix",
    "test:unit",
    "git:stagelib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/<repo-name>.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services"
  ],
  "author": "lewisdaly",
  "contributors": [
    "Lewis Daly <lewis@vesselstech.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/<repo-name>/issues"
  },
  "homepage": "https://github.com/mojaloop/<repo-name>#readme",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "eslint": "6.0.1",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "prettier": "1.18.2",
    "tape": "4.11.0",
    "tapes": "4.1.0",
    "ts-node": "8.3.0",
    "typescript": "3.5.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ]
  }
}
